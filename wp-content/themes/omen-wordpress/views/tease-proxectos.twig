{% set categorias = post.get_field('cat_proxecto') %}
{% set cliente = post.get_field('info_proxecto_ficha_grupo_cliente') %}
{% set estado = post.get_field('info_proxecto_ficha_estado_proxecto') %}

	{% block content %}
			<div class="{{ categorias.slug | join(', ') }}">
				<a class="cluedestacado2" title="{{estado}}" href="{{post.link}}" class="post-{{post.ID}}">
					<img class="thumb-proxecto" src="{{ TimberImage(post.imaxe_fondo).src('omen-thumbs') }}">
					<span class="meta-proxecto">
						<span class="titulo-proxecto">{{post.title}}</span>
						{% if cliente %}
			        	{% for item_cliente in cliente %}
			        	<span class="cliente-proxecto">{{item_cliente.name}}</span>
			        	{% endfor %}
		        	{% endif %}
					</span>
				</a>
			</div>

	{% endblock %}
